    <script>
        // form validation
        function validateForm() {
            const nameValue = document.getElementById('product_name').value
            const descValue = document.getElementById('textField').value
            const error = document.getElementById('catError')

            if (nameValue.trim() == "" || descValue.trim() == "") {
                error.innerHTML = 'please fill the details'
                return false
            } else {
                document.getElementById('catForm').submit()
            }

        }

        // sweetAlert for deleting category
        function deleteCategory(catId) {
            swal('are you sure you want to delete the category', {
                title: "Are you sure?",
                text: 'you are about to delete this',
                icon: 'warning',
                buttons: ["Cancel", "Delete"]
            }).then((confirmed) => {
                if (confirmed) {
                    $.ajax({
                        url: '/admin/deleteCategory/' + catId,
                        type: 'get'
                    }).done(res => {
                        swal('successsfull', `done`, 'success').then(() => {
                            location.reload();
                        })
                    })
                } else {
                    swal('Canceleld', 'the category is not deleted', 'info')
                }
            })
                .catch((error) => {
                    swal('Error', `An error occured:${error}`, 'error')
                })
        }



    </script>
