<%- include('../partials/adminHeader') %>
    <section class="content-main">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Categories </h2>

            </div>

        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">

                        <% var editCat %>
                            <% var category %>
                                <% var updated %>
                                    <% if (updated) { %>
                                        <h5 class="text-dark">EDIT CATEGORY</h5>
                                        <form action="/admin/postEditCategory/<%= editCat._id %>" method="post" onsubmit="return validateForm()"
                                            id="catForm">
                                            <span id="catError" class="text-danger"></span>
                                            <div class="mb-4">
                                                <label for="product_name" class="form-label">Name</label>
                                                <input type="text" value="<%= editCat.name %>" class="form-control"
                                                    id="product_name" name="catName" />
                                            </div>
                                            <div class="mb-4">
                                                <label class="form-label">Description</label>
                                                <input type="text"  class="form-control"
                                                    name="catDescription"
                                                    value="<%= editCat.description %>" id="textField">
                                            </div>
                                            <div class="d-grid">
                                                <button class="btn btn-primary" type="submit">Edit
                                                    category</button>
                                            </div>
                                        </form>

                                        <% } else {%>
                                            <form action="/admin/addCategory" method="post"
                                                onsubmit="return validateForm()" id="catForm">
                                                <span id="catError" class="text-danger"></span>
                                                <div class="mb-4">
                                                    <label for="product_name" class="form-label">Name</label>
                                                    <input type="text" placeholder="Type here" class="form-control"
                                                        id="product_name" name="catName" />
                                                </div>
                                                <div class="mb-4">
                                                    <label class="form-label">Description</label>
                                                    <input type="text" placeholder="type here" class="form-control"
                                                        name="catDescription" id="textField">
                                                </div>
                                                <div class="d-grid">
                                                    <button class="btn btn-primary" type="submit">Create
                                                        category</button>
                                                </div>
                                            </form>
                                            <% } %>
                    </div>
                    <!-- category displaying in tables -->
                    <div class="col-md-9">
                        <div class="table-responsive">
                            <table class="table " id="categoryTable">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <!-- <th>Slug</th>
                                            <th>Order</th> -->
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% category.forEach((category,index)=> { %>

                                        <tr>
                                            <td>
                                                <%= index+1 %>
                                            </td>
                                            <td><b>
                                                    <%= category.name %>
                                                </b></td>
                                            <td class="fs-6">
                                                <%= category.description %>
                                            </td>
                                            <td width="20%">
                                                <a href="/admin/editCategory/<%= category._id %>">
                                                    <button type="button"
                                                        class="btn btn-sm rounded btn-warning">Edit</button>
                                                </a>
                                                <button class="btn btn-sm rounded btn-danger"
                                                    onclick="deleteCategory('<%=category._id%>')">Delete</button>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div> <!-- .col// -->
                </div> <!-- .row // -->
            </div> <!-- card body .// -->
        </div> <!-- card .// -->
    </section> <!-- content-main end// -->

