<%- include('../partials/adminHeader') %>

        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List </h2>
                   
                </div>
               
            </div>
            <div class="card mb-4">
               <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="orderTable">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Email</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Date</th>
                                    <th scope="col" class="text-end"> Action </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% orderDetails.forEach(order => { %>
                                <tr>
                                    <td><%= order._id %></td>
                                    <td><b><%= order.users[0].name %></b></td>
                                    <td><%= order.users[0].email %></td>
                                    <td>$9.00</td>

                                    <td>

                                        <% if (order.orderStatus=='pending') { %>
                                            <span class="badge rounded-pill bg-success  "><%= order.orderStatus %></span>
                                        <% } else if (order.orderStatus=='placed') {%>
                                            <span class="badge rounded-pill bg-primary  "><%= order.orderStatus %></span>
                                            <% } else if (order.orderStatus=='Shipped') {%>
                                                <span class="badge rounded-pill bg-info  "><%= order.orderStatus %></span>
                                                <% } else if (order.orderStatus == 'cancelled') { %>
                                                    <span class="badge rounded-pill bg-danger "><%= order.orderStatus %></span>
                                                <% } else if (order.orderStatus == 'Delivered') {%>
                                                    <span class="badge rounded-pill bg-success "><%= order.orderStatus %></span>
                                                    <% } else if(order.orderStatus == 'return') { %>
                                                        <span class="badge rounded-pill bg-warning "><%= order.orderStatus %></span>
                                                        <% } %>

                                        
                                    <td><%= order.orderDate.toLocaleDateString('en-GB') %></td>
                                    <td class="text-end">
                                        <a href="/admin/getOrderDetails/<%= order._id %>" class="btn btn-md rounded font-sm">Detail</a>
                                       <!-- dropdown //end -->
                                    </td>
                                </tr>
                                <% }) %>
                               
                            </tbody>
                        </table>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
            
        </section> <!-- content-main end// -->
        <%- include('../partials/adminFooter') %>