                </div>
            </header> <!-- card-header end// -->

            <!-- table starts  -->
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover" id="userTable">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Status</th>
                                <th>Action</th>

                                <th class="text-end"> Details </th>
                            </tr>
                        </thead>
                        <tbody>
                            <% users.forEach((users,index)=> { %>

                                <tr>
                                    <td>
                                        <%= index+1 %>
                                    </td>
                                    <td width="40%">
                                        <a href="#" class="itemside">
                                            <div class="left">
                                                <img src="assets/imgs/people/avatar1.jpg" class="img-sm img-avatar"
                                                    alt="Userpic">
                                            </div>
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title">
                                                    <%= users.name %>
                                                </h6>
                                            </div>
                                        </a>
                                    </td>
                                    <td>
                                        <div class="info">
                                            <h6 class="mb-0 title">
                                                <%= users.email %>
                                            </h6>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="info">
                                            <h6 class="mb-0 title">
                                                <%= users.phone %>
                                            </h6>
                                        </div>
                                    </td>
                                    <td>
                                        <% if (!users.blocked) { %>
                                            <span class="badge rounded-pill alert-success">
                                                Active
                                            </span>
                                            <% } else { %>
                                                <span class="badge rounded-pill alert-success">
                                                    Inactive
                                                </span>
                                                <% } %>
                                    </td>
                                    <td class="text-end">
                                        <% if (users.blocked) { %>
                                            <a href="/admin/unblockUser/<%= users.id %>">
                                                <button
                                                    onclick="return confirm('Are you want to unblock <%= users.name %>?')"
                                                    class="btn btn-warning rounded font-sm mt-15">
                                                    Unblock
                                                </button>
                                            </a>
                                            <% } else { %>
                                                <a href="/admin/blockUser/<%= users.id %>">
                                                    <button id="blockButton" data-user-id="<%= users.id %>"
                                                        class="btn btn-danger rounded font-sm mt-15">
                                                        Block
                                                    </button>
                                                </a>
                                                <% } %>
                                    </td>
                                    <td class="text-end">
                                        <button class="btn btn-brand rounded font-sm mt-15">
                                            view Details
                                        </button>
                                    </td>
                                </tr>
                                <% }) ;%>

                        </tbody>
                    </table>

                    <!-- table-responsive.// -->
                </div>
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->

    </section> <!-- content-main end// -->

