			<div class="flex-c-m flex-w w-full p-t-45">
				<a href="#" class="flex-c-m stext-101 cl5 size-103 bg2 bor1 hov-btn1 p-lr-15 trans-04">
					Load More
				</a>
			</div> -->
		</div>
	</section>

	<script>

		//filteringn the products
		$(document).ready(function () {
			$('#filter-form').submit(function (event) {
				event.preventDefault()

				var sortValue = $('input[name="sort-by"]:checked').val();
				var priceValue = $('input[name="price"]:checked').val();
				var colorValue = $('input[name="color"]:checked').data('filter-value');

				var filterData = {
					sortBy: sortValue,
					priceValue: priceValue,
					colorValue: colorValue
				}

				$.ajax({
					url: '/filterProducts',
					type: 'POST',
					dataType: 'json',
					data: filterData,
					success: function (filteredProducts) {
						updateProductListUI(filteredProducts)
					}
				})
			})
		})

		function updateProductListUI(filteredProducts) {
			var productListContainer = $('#productContainer')
			productListContainer.empty()
			filteredProducts.forEach(product => {
				var productHtml = `
					<div class="col-sm-6 col-md-4 col-lg-3 p-b-35 isotope-item women">
						<!-- Block2 -->
						<div class="block2 shadow" style="border-radius: 20px;">
						<div class="block2-pic hov-img0" id="img-container" style="border-radius: 20px 20px 0px 0px;">
							<a href="/viewProduct/${product.slug}">
							<img src="/${product.prodImage[0]}" width="320" height="400" alt="IMG-PRODUCT">
							</a>
						</div>

						<div style="padding: 8px;">
							<div class="block2-txt flex-w flex-t">
							<div class="flex-col-l" style="margin: auto; padding-bottom:10px;">
								<a href="product-detail.html" class="font-weight-bold fs-5 stext-104 cl4 hov-cl1 trans-04 js-name-b2 p-b-6">
								${product.prodName}
								</a>
								<span class="stext-105 cl3 fs-6">
								Rs.${product.prodPrice.toLocaleString()}
								</span>
							</div>
							</div>

							<div class="d-flex justify-content-center">
							<div style="border: none;">
								<button class="cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail me-1 font-weight-bold"
								onclick="addToCart('${product._id}')">
								Add to cart<i class="ms-2 fi-rs-shopping-bag-add"></i>
								</button>
								<button class="cl0 size-101 bg1 bor1 hov-btn1 p-lr-15 trans-04 js-addcart-detail font-weight-bold">
								wishlist<i class="fa-sharp fa-regular fa-heart ms-2"></i>
								</button>
							</div>
							</div>
						</div>
						</div>
					</div>
					`
				productListContainer.append(productHtml);
			});
		}

		// **** searching products
		$(document).ready(function () {
			$('#searchProduct').keyup(function () {
				var query = $(this).val()
				$.ajax({
					url: '/searchProducts',
					type: 'GET',
					data: { query: query },
					success: function (suggestedProducts) {
						updateProductListUI(suggestedProducts)
					}
				})
			})
		})


		//***add to wishlist***


	</script>

