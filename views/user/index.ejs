									<label class="form-check-label" for="flexRadioDefault1">
										All
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="radio" name="price" value="0-1000"
										id="price-0-50" data-filter-type="price">
									<label class="form-check-label" for="flexRadioDefault2">
										below Rs.1000
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="radio" name="price" value="1000-2500"
										id="price-100-150" data-filter-type="price">
									<label class="form-check-label" for="flexRadioDefault2">
										Rs.1000.00 - Rs.2500.00
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="radio" name="price" value="2500-3000"
										id="price-150-200" data-filter-type="price">
									<label class="form-check-label" for="flexRadioDefault2">
										Rs.2500.00 - Rs.3000.00
									</label>
								</div>
								<div class="form-check">
									<input class="form-check-input" type="radio" name="price" value="3000-4000"
										id="price-200+" data-filter-type="price">
									<label class="form-check-label" for="flexRadioDefault2">
										Rs.3000.00+
									</label>
								</div>
							</div>

							<!-- COLOR -->
							<div class="filter-col3 p-r-15 p-b-27">
								<div class="mtext-102 cl2 p-b-15">
									Color
								</div>
								<div class="form-check">
									<input class="form-check-input" type="radio" name="color" value="white"
										data-filter-value="all" checked>
									<label class="form-check-label" for="flexRadioDefault1">
										All
									</label>
								</div>
								<% console.log(colorList) %>
									<% colorList.forEach(color=> { %>
										<div class="form-check">
											<input class="form-check-input" type="radio" name="color"
												value="<%= color %>" data-filter-value="<%= color %>">
											<label class="form-check-label" for="flexRadioDefault1">
