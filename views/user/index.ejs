					<div class="bor8 dis-flex p-l-15">
						<button class="size-113 flex-c-m fs-16 cl2 hov-cl1 trans-04">
							<i class="zmdi zmdi-search"></i>
						</button>

						<input class="mtext-107 cl2 size-114 plh2 p-r-15" type="text" name="search-product"
							placeholder="Search" id="searchProduct">
					</div>
				</div>

				<!-- Filter -->
				<div class="dis-none panel-filter w-full p-t-10">
					<form action="" id="filter-form">

						<div class="wrap-filter flex-w bg6 w-full p-lr-40 p-t-27 p-lr-15-sm">

							<!-- SORT -->
							<div class="filter-col1 p-r-15 p-b-27">

								<div class="mtext-102 cl2 p-b-15">
									Sort By
								</div>
								<div class="form-check">
									<input class="form-check-input" type="radio" name="sort-by" value="all"
										id="price-all" checked>
									<label class="form-check-label" for="flexRadioDefault1">
										All
									</label>
								</div>

								<div class="form-check">
									<input class="form-check-input" type="radio" name="sort-by" value="low-to-high"
										id="price-low-to-high-sort-by">
									<label class="form-check-label" for="flexRadioDefault1">
										price low to high
									</label>
								</div>

								<div class="form-check">
									<input class="form-check-input" type="radio" name="sort-by" value="high-to-low"
										id="price-high-to-low-sort-by">
									<label class="form-check-label" for="flexRadioDefault2">
										Price: High to Low
									</label>
								</div>


							</div>

							<!-- PRICE -->
							<div class="filter-col2 p-r-15 p-b-27">
								<div class="mtext-102 cl2 p-b-15">
									Price
								</div>

								<div class="form-check">
									<input class="form-check-input" type="radio" name="price" value="all" id="price-all"
