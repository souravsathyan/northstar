    <script src="javascripts/main.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script>
        // match(/^[a-zA-Z0-9!@#$%^&*()_+<>?]*$/)

        //form validation
        function validateForm() {
            const pwdValue = document.getElementById('password').value
            const cnfmValue = document.getElementById('cnfrm-password').value
            const passError = document.getElementById('password-error')
            const cnfmError = document.getElementById("pass-error")

            if (!pwdValue.trim().match(/^[a-zA-Z0-9!@#$%^&*()_+<>?]*$/)) {
                passError.innerHTML = 'password doesnt meet reuired conditions'
                passError.style.color='red'
                return false
            } else if (pwdValue.trim() !== cnfmValue.trim()) {
                passError.innerHTML = 'password not matching'
                passError.style.color='red'
                return false
            } else if (pwdValue.trim() === "" || cnfmValue.trim() === "") {
                passError.innerHTML = 'cannot keep fields empty'
                passError.style.color='red'
                return false
            } else if (
                pwdValue.trim().match(/^[a-zA-Z0-9!@#$%^&*()_+<>?]*$/) &
                pwdValue.trim() === cnfmValue.trim()) 
                {
                    cnfmError.innerHTML='password matched'
                    cnfmError.style.color='green'
                    document.getElementById('pwdForm').submit()
            }
        }
    </script>

