    <body>
        <div class=" row pt-5">
            <div class="col-md-6 m-auto myOtpPage">
                <div class="container height-100 d-flex justify-content-center align-items-center">
                    <div class="position-relative">
                        <div class="card  text-center">
                            <form action="/otpLogin" method="post" id="otpForm">
                                <h2>OTP LOGIN</h2>
                                <% var msg %>
                                <% if (msg) { %>
                                    <span class="text-danger"><%= msg %></span>
                                    <% } %>
                                <div class="form-outline mb-2 text-center">
                                    <label for="" class="py-2">Enter your Mobile Number</label>
                                    <span id="mobError" class="text-danger"></span>
                                    <input type="text" id="mobile" class="form-control form-control-lg " name="phone" >
                                </div>

                                <div class="mt-3 mb-4 ">
                                    <a href="" class="p-5">
                                        <button type="submit" class="btn btn-primary px-4 validate">
                                            Send
                                        </button>
                                    </a>
                                </div>
                            </form>


                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://kit.fontawesome.com/1457d0b10a.js" crossorigin="anonymous"></script>

