<body>

    <div class="container">
        <div class=" row pt-5 ">
            <div class="col-md-6 m-auto bg-light border rounded myFormBody myOtpPage">
                <div class="container height-100 d-flex justify-content-center align-items-center">
                    <div class="position-relative">
                        <div class="  text-center">

                            <form action="/verifyForgetPwd" method="post">
                                <h4 class="p-5">Please enter the one time password <br> to verify your account</h4>
                                <div id="otp" class="inputs d-flex flex-row justify-content-center mt-2">
                                    <input class="m-2 text-center form-control rounded  otpLen" maxlength="1"
                                        name="otp1" type="text" />
                                    <input class="m-2 text-center form-control rounded  otpLen" maxlength="1"
                                        name="otp2" type="text" />
                                    <input class="m-2 text-center form-control rounded  otpLen" maxlength="1"
                                        name="otp3" type="text" />
                                    <input class="m-2 text-center form-control rounded  otpLen" maxlength="1"
                                        name="otp4" type="text" />
                                    <input class="m-2 text-center form-control rounded  otpLen" maxlength="1"
                                        name="otp5" type="text" />
                                    <input class="m-2 text-center form-control rounded  otpLen" maxlength="1"
                                        name="otp6" type="text" />
                                </div>
                                <% var msg %><!--error mesage-->
                                    <% var sendMsg %> <!--success message-->
                                        <% var otpSend %> <!--boolean true if sent-->
                                            <% if (otpSend) { %>
                                                <div>
                                                    <span class="text-success">
                                                        <%= sendMsg %>
                                                    </span>
                                                </div>
                                                <% } %>
                                                    <% if (msg) { %>
                                                        <div>
                                                            <span class="text-danger">
                                                                <%= msg %>
                                                            </span>
                                                        </div>
                                                        <% } %>
                                                            <div class="mt-4 pb-3">

                                                               

                                                                <a href="">
                                                                    <button type="submit"
                                                                        class="btn btn-success px-4 validate">Verify</button>
                                                                </a>
                                                            </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


