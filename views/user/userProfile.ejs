    <script>
        function deleteAddress(addId) {
            Swal.fire({
                title: "Are you sure?",
                text: "you are going to delete this address",
                icon: "warning",
                showCancelButton: true,
                confirmButtonText: "Yes",
                cancelButtonText: "No"
            }).then((confirmed) => {
                if (confirmed.value) {
                    $.ajax({
                        url: '/deleteAddress',
                        method: 'post',
                        data: {
                            addId: addId
                        }
                    }).done(res => {
                        Swal.fire({
                            title: "Success",
                            text: res.message,
                            icon: "success"
                        }).then(() => {
                            location.reload()
                        });
                    });
                } else {
                    Swal.fire({
                        title: "Cancelled",
                        text: "Your action has been cancelled",
                        icon: "info"
                    });
                }
            });
        }

    </script>
