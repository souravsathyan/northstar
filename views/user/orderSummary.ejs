<%- include('../partials/userHeader') %>


    <div class="container" style="min-height: 100vh;">

        <div class="row" style="padding-top: 40px; ">
            <div class="col-xl-12" style="margin-bottom: 10px;">
                <h3>Order Summary</h3>
                <p class="pt-2">Hi <%= user.name %>, Your order has been confirmed and will be shipping soon</p>
            </div>
            <hr>

            <% if (addressDetails[0].orderStatus == 'return') { %>
                <div>
                <p>
                    We apologize for any inconvenience caused and appreciate your understanding. Your returned product
                    has been successfully received. Our team will now assess the condition of the item and process the
                    necessary steps to address your request. We strive to provide the best customer service possible,
                    and we will work diligently to resolve the issue and ensure your satisfaction. If you have any
                    further questions or concerns, please don't hesitate to reach out to our customer support team.
                    Thank you for choosing our product, and we value your continued support.
                </p>
            </div>
            <% } %>
        </div>


        <div class="row">
            <!-- Order details -->
            <div class="col-xl-8">
                <div class="" style="padding-top: 10px; ">
                    <div class="d-flex justify-content-evenly" style="margin-top:10px ;">
                        <div class="orderSummaryList roundBorder1 ">
                            <div class="orderSumBottomBorder">
                                <h5>Order Date</h5>

                            </div>
                            <p class="pt-4">
                                <%= addressDetails[0].orderDate.toLocaleDateString('en-GB') %>
                            </p>
                        </div>
                        <div class="orderSummaryList">
                            <div class="orderSumBottomBorder">
                                <h5>Order ID</h5>
                            </div>
                            <p class="pt-4">
                                <%= addressDetails[0]._id %>
                            </p>
                        </div>
                        <div class="orderSummaryList">
                            <div class="orderSumBottomBorder">
                                <h5>Payment Method</h5>
                            </div>
                            <p class="pt-4">
                                <%= addressDetails[0].paymentMethod %>
                            </p>
                        </div>
                        <div class="orderSummaryList roundBorder2">
                            <div class="orderSumBottomBorder">
                                <h5>Address</h5>
                            </div>
                            <p class="pt-4">
                                <%= addressDetails[0].orderAddress[0].address %>
                            </p>
                        </div>
                    </div>
                </div>
                <!-- ORder details -->
                <% productDetails.forEach(item=> { %>
                    <div class="" style="">

                        <hr>
                        <div class="d-flex justify-content-evenly" style="margin-top:15px; padding-top: 40px;">
                            <div class="">
                                <!-- image -->
                                <div>
                                    <img src="<%= item.prodImage[0] %>" alt="" srcset="" width="100" height="100">
                                </div>
                            </div>
                            <div class="">
                                <!-- prod details -->
                                <h4>
                                    <%= item.prodName %>
                                </h4>
                                <p>
                                    <%= item.prodDescription %>
                                </p>
                            </div>
                            <div class="">
                                <!-- Qty -->
                                <h4>Qty</h4>
                                <p></p>
                            </div>
                            <div class="">
                                <!-- price -->
                                <h4>Price</h4>
                                <p>
                                    <%= item.prodPrice.toLocaleString() %>
                                </p>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <hr>
            </div>

            <!-- rates -->
            <div class="col-xl-4 " style="padding-top: 20px; ">
                <div style="background-color: #ededed;border-radius: 40px;">
                    <div class="d-flex justify-content-evenly totalPad">
                        <div class="" style="padding-right: 125px;">
                            <h5>Sub Total</h5>
                        </div>
                        <div>
                            <h5>
                                <%= addressDetails[0].totalAmount %>
                            </h5>
                        </div>
                    </div>
                    <div class="d-flex justify-content-evenly totalPad">
                        <div class="">
                            <h5>Shipping Charges</h5>
                        </div>
                        <div>
                            <h5>Free shipping</h5>
                        </div>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-evenly totalPad">
                        <div class="" style="padding-right: 80px;">
                            <h4>Grand Total</h4>
                        </div>
                        <div>
                            <h5>
                                <%= addressDetails[0].totalAmount %>
                            </h5>
                        </div>
                    </div>
                </div>

                <div style="margin-top: 20px;">
                    <a href="/">
                        <button class="cl0  pb-5 bg1 bor1 hov-btn1 trans-04 l btn-lg ms-5">Continue
                            Shopping</button>
                    </a>
                </div>

                <div class="d-flex align-items-center" style="padding-top: 50px;">
                    <h4 class="me-5">Order Status</h4>
                    <% if (addressDetails[0].orderStatus=='pending' ) { %>
                        <span class="badge rounded-pill bg-warning fs-5 order-status ">
                            <%= addressDetails[0].orderStatus %>
                        </span>
                        <% } else if (addressDetails[0].orderStatus=='placed' ) {%>
                            <span class="badge rounded-pill bg-primary fs-5 order-status ">
                                <%= addressDetails[0].orderStatus %>
                            </span>
                            <% } else if (addressDetails[0].orderStatus=='Shipped' ) {%>
                                <span class="badge rounded-pill bg-info fs-5 order-status ">
                                    <%= addressDetails[0].orderStatus %>
                                </span>
                                <% } else if (addressDetails[0].orderStatus=='cancelled' ) { %>
                                    <span class="badge rounded-pill bg-danger fs-5 order-status">
                                        <%= addressDetails[0].orderStatus %>
                                    </span>
                                    <% } else if (addressDetails[0].orderStatus=='Delivered' ) {%>
                                        <span class="badge rounded-pill bg-success fs-5 order-status ">
                                            <%= addressDetails[0].orderStatus %>
                                        </span>
                                        <% } else if (addressDetails[0].orderStatus=='return' ) {%>
                                            <span class="badge rounded-pill bg-warning fs-5 order-status">
                                                <%= addressDetails[0].orderStatus %>
                                            </span>
                                            <% } %>
                </div>
                <div>

                </div>

            </div>

        </div>

        <div class="row">
            <div class="col-xl-8">
                <p>
                    Thank you for choosing <span
                        style="color: #717fe7; font-size: larger; font-weight: bolder;">NorthStar</span>! We are excited
                    to help you with your needs. If you have any questions, please do not hesitate to contact us
                </p>
            </div>
        </div>


    </div>




    <%- include('../partials/userFooter') %>